{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext",
			"es6"
		],
		"allowJs": true,
		"baseUrl": ".",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"types": [
			"jest",
			"node"
		],
		"importsNotUsedAsValues": "preserve"
	},
	"include": ["**/*.js", "**/*.ts"],
	"exclude": [
		"build",
		"node_modules"
	]
}
